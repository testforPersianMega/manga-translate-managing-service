generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BookType {
  MANGA
  MANHWA
  COMIC
}

enum ChapterStatus {
  AVAILABLE
  CLAIMED
  IN_PROGRESS
  DONE
}

enum ScopeMode {
  ALL_BOOKS
  SELECTED_BOOKS
}

model User {
  id              String                 @id @default(cuid())
  name            String?
  email           String                 @unique
  passwordHash    String
  roleId          String
  role            Role                   @relation(fields: [roleId], references: [id])
  isActive        Boolean                @default(true)
  scopeMode       ScopeMode              @default(ALL_BOOKS)
  permissionGrants UserPermissionGrant[]
  permissionDenies UserPermissionDeny[]
  bookAccess      BookAccess[]
  assignedChapters Chapter[]             @relation("ChapterAssignments")
  activityLogs    ActivityLog[]          @relation("ActivityActor")
  targetedLogs    ActivityLog[]          @relation("ActivityTarget")
  uploadBatches   ChapterUploadBatch[]
  uploadJobs      UploadJob[]
  createdAt       DateTime               @default(now())
  updatedAt       DateTime               @updatedAt
}

model Role {
  id              String            @id @default(cuid())
  name            String            @unique
  description     String?
  users           User[]
  rolePermissions RolePermission[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

model Permission {
  id        String            @id @default(cuid())
  key       String            @unique
  labelFa   String
  group     String
  createdAt DateTime          @default(now())
  roles     RolePermission[]
  grants    UserPermissionGrant[]
  denies    UserPermissionDeny[]
}

model RolePermission {
  roleId       String
  permissionId String
  role         Role       @relation(fields: [roleId], references: [id])
  permission   Permission @relation(fields: [permissionId], references: [id])

  @@id([roleId, permissionId])
}

model UserPermissionGrant {
  userId       String
  permissionId String
  user         User       @relation(fields: [userId], references: [id])
  permission   Permission @relation(fields: [permissionId], references: [id])

  @@id([userId, permissionId])
}

model UserPermissionDeny {
  userId       String
  permissionId String
  user         User       @relation(fields: [userId], references: [id])
  permission   Permission @relation(fields: [permissionId], references: [id])

  @@id([userId, permissionId])
}

model Book {
  id          String        @id @default(cuid())
  titleFa     String
  titleEn     String?
  type        BookType
  description String?
  coverUrl    String?
  chapters    Chapter[]
  accesses    BookAccess[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model BookAccess {
  userId String
  bookId String
  user   User @relation(fields: [userId], references: [id])
  book   Book @relation(fields: [bookId], references: [id])

  @@id([userId, bookId])
  @@index([userId, bookId])
}

model Chapter {
  id               String        @id @default(cuid())
  bookId           String
  number           String
  title            String?
  status           ChapterStatus @default(AVAILABLE)
  assignedToUserId String?
  assignedToUser   User?         @relation("ChapterAssignments", fields: [assignedToUserId], references: [id])
  claimedAt        DateTime?
  book             Book          @relation(fields: [bookId], references: [id])
  assets           ChapterAsset[]
  pageJsons        ChapterPageJson[]
  uploadBatches    ChapterUploadBatch[]
  uploadJobs       UploadJob[]
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  @@index([bookId, status])
  @@index([assignedToUserId, status])
}

model InviteToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  usedAt    DateTime?
}

model ChapterAsset {
  id        String    @id @default(cuid())
  chapterId String
  chapter   Chapter   @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  pageIndex Int
  filePath  String
  fileName  String
  mimeType  String
  size      Int
  width     Int?
  height    Int?
  pageJson  ChapterPageJson?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([chapterId, pageIndex])
  @@index([chapterId, pageIndex])
}

model ChapterPageJson {
  id           String        @id @default(cuid())
  chapterId    String
  chapter      Chapter       @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  assetId      String        @unique
  asset        ChapterAsset  @relation(fields: [assetId], references: [id], onDelete: Cascade)
  jsonPath     String
  jsonFileName String
  size         Int
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model ChapterUploadBatch {
  id               String   @id @default(cuid())
  chapterId        String
  chapter          Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  uploadedByUserId String?
  uploadedByUser   User?    @relation(fields: [uploadedByUserId], references: [id])
  type             String
  createdAt        DateTime @default(now())
}

model UploadJob {
  id              String   @id @default(cuid())
  chapterId       String
  chapter         Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  status          String
  progressCurrent Int?
  progressTotal   Int?
  messageFa       String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([chapterId, userId, createdAt])
  @@index([userId, status])
}

model ActivityLog {
  id           String   @id @default(cuid())
  actorUserId  String?
  targetUserId String?
  action       String
  metadata     Json?
  actor        User?    @relation("ActivityActor", fields: [actorUserId], references: [id])
  target       User?    @relation("ActivityTarget", fields: [targetUserId], references: [id])
  createdAt    DateTime @default(now())
}
